<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--MainActivity Style-->
    <style name="NoActonBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--ToolBar的样式，包括PopMenu和AutoCompleteTextView弹出pop样式-->
    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--ToolBar PopMenu的样式-->
    <style name="ToolBarPopStyle" parent="Base.Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
    </style>

    <!--BottomSheetDialog的强调色-->
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <dimen name="dimen_bottom_play_controller_height">55dp</dimen>

    <style name="volumeSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:thumb">@drawable/shape_volume_seek_thumb</item>
        <item name="android:progressDrawable">@drawable/layer_volume_seek_bg</item>
        <item name="android:maxHeight">2dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="mediaSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:maxHeight">2dp</item>
        <item name="android:thumb">@drawable/shape_media_seek_thumb</item>
        <item name="android:progressDrawable">@drawable/layer_media_seek_bg</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>
</resources>
